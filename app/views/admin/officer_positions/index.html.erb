<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4">Officer Position Lists</h1>

  <div class="mb-4">
    <%= link_to 'Add Officer Position', new_officer_position_path, class: 'inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="space-y-4">
    <h1 class="text-2xl font-bold mb-4">Position Name</h1>
    <div class="p-4 bg-white rounded-lg shadow">
      <% @officer_positions.each do |officer_position| %>
        <div class="flex justify-between items-center mb-4 border-b">
          <p class="text-xl font-semibold text-gray-800 mb-2">
            <span class="font-normal"><%= officer_position.name %></span>
          </p>

          <div class="relative group" data-controller="dropdown">
            <button class="inline-block px-3 py-1 border border-gray-300 text-sm rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300" data-action="click->dropdown#toggle">
              <%= image_tag("setting.svg", alt: "Setting Icon") %>
            </button>

            <div data-dropdown-target="dropdown" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden">
              <%= link_to 'Edit', edit_officer_position_path(officer_position), class: 'block px-4 py-2 text-sm text-yellow-600 hover:bg-yellow-50' %>

              <%= link_to 'Delete', officer_position_path(officer_position),
                          data: {
                            action: 'click->sweet-alert#confirmDelete',
                            turbo_method: :delete
                          },
                          class: 'block px-4 py-2 text-sm text-red-600 hover:bg-red-50' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<main class="flex justify-center mt-28">
  <div class="w-full max-w-md p-8 bg-white rounded-xl shadow-lg transform transition-all">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-800">Admin Login</h2>
      <p class="text-gray-500 mt-2">Please sign in to your account</p>
    </div>

    <%= form_with model: resource, scope: resource_name, url: admin_user_session_path, html: { class: 'space-y-6' } do |f| %>
      <div>
        <%= f.label :username, class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <%= image_tag 'admin/login/person.svg', class: 'h-5 w-5' %>
          </div>
          <%= f.text_field :username,
              autofocus: true,
              class: 'pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors',
              placeholder: 'Enter your username' %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between mb-2">
          <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
          <a href="#" class="text-sm text-blue-600 hover:text-blue-500">Forgot password?</a>
        </div>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <%= image_tag 'admin/login/padlock.svg', class: 'h-5 w-5' %>
          </div>
          <%= f.password_field :password,
              class: 'pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors',
              placeholder: 'Enter your password' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <div class="flex items-center">
            <%= f.check_box :remember_me,
                class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded transition-colors' %>
            <%= f.label :remember_me,
                class: 'ml-2 block text-sm text-gray-700 select-none' %>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.submit "Sign in",
            class: 'w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors' %>
      </div>
    <% end %>
  </div>
</main>

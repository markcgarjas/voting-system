<div class="new-edit-student-page">
  <!-- Header Section -->
  <div class="header">
    <h1><%= action_name.capitalize %> Student Details</h1>
    <%= link_to 'Back', back_url, class: 'btn btn-secondary' %>
  </div>

  <!-- Profile and Form Section -->
  <div class="details-container">
    <!-- Profile Image -->
    <div class="profile-image-container">
      <%= image_tag "profile.svg", alt: "Profile Icon", class: 'profile-image' %>
    </div>

    <!-- Form Section -->
    <%= form_with model: @student, url: url, method: method, class: 'student-form' do |form| %>
      <div class="form-group">
        <label>Username:</label>
        <%= form.text_field :username, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Email:</label>
        <%= form.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Section:</label>
        <%= form.text_field :section, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Year:</label>
        <%= form.text_field :year, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Status:</label>
        <%= form.text_field :status, class: 'form-control' %>
      </div>
      <% unless @student.persisted? %>
        <div class="form-group">
          <label>Password:</label>
          <h2 class="generated-password"><%= cookies[:password] %></h2>
        </div>
      <% end %>
      <div class="form-group">
        <%= form.submit submit_text, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

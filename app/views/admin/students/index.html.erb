<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4">Student Lists</h1>

  <div class="space-y-4">
    <% @students.each do |student| %>
      <div class="p-4 bg-white rounded-lg shadow">
        <p class="text-xl font-semibold text-gray-800 mb-2">Email: <span class="font-normal"><%= student.email %></span></p>
        <p class="text-gray-600">Username: <span class="font-normal"><%= student.username %></span></p>
      </div>
    <% end %>
  </div>
</div>

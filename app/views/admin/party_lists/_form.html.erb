<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4"><%= action_name.capitalize %> Party List Position</h1>

  <div class="mb-4">
    <%= link_to 'Back to Lists', party_lists_path, class: 'inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <%= form_with model: @party_list, url: url, method: method, html: { class: 'w-full' }, data: { turbo: false } do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :name, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2' %>
    </div>

    <div class="mb-4">
      <%= f.label :description, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :description, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2' %>
    </div>

    <div class="mb-4">
      <%= f.label :organization, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.collection_select :organization_id, Organization.all, :id, :name, { prompt: 'Select Organization' },
                                 { class: 'mt-1 mb-3 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2' } %>
    </div>

    <div>
      <%= f.submit submit, class: 'w-full bg-blue-600 text-white py-2 text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  <% end %>
</div>

<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4">Party Lists</h1>

  <div class="mb-4">
    <%= link_to 'Add Party List', new_party_list_path, class: 'inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="space-y-4">
    <% @party_lists.each do |party_list| %>
      <div class="p-4 bg-white rounded-lg shadow">
        <div class="flex justify-between items-start">
          <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2">
              Organization: <span class="font-normal"><%= party_list.organization.name %></span>
            </h2>
            <p class="text-gray-600 mb-2">Name: <span class="font-normal"><%= party_list.name %></span></p>
            <p class="text-gray-600 mb-2">Description: <span class="font-normal"><%= party_list.description %></span></p>
          </div>

          <div class="relative" data-controller="dropdown">
            <button class="inline-block px-3 py-1 border border-b text-sm rounded-md hover:bg-white focus:outline-none focus:ring-2 focus:ring-white" data-action="click->dropdown#toggle">
              <%= image_tag("setting.svg", alt: "Setting Icon") %>
            </button>

            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden" data-dropdown-target="dropdown">
              <%= link_to 'Edit', edit_party_list_path(party_list), class: 'block px-4 py-2 text-sm text-yellow-600 hover:bg-yellow-50' %>
              <%= link_to 'Delete', party_list_path(party_list), data: { turbo_confirm: 'Are you sure you want to remove this party list?', turbo_method: :delete }, class: 'block px-4 py-2 text-sm text-red-600 hover:bg-red-50' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

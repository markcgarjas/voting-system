<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4">Organization Lists</h1>

  <div class="mb-4">
    <%= link_to 'Add Organization', new_organization_path, class: 'inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="space-y-4">
    <% @organizations.each do |organization| %>
      <div class="p-4 bg-white rounded-lg shadow">

        <div class="flex justify-between items-start">
          <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2">
              Name: <span class="font-normal"><%= organization.name %></span>
            </h2>
            <p class="text-gray-600 mb-2">Code: <span class="font-normal"><%= organization.code %></span></p>
          </div>

          <div class="relative" data-controller="dropdown">
            <button class="inline-block px-3 py-1 border border-b text-sm rounded-md hover:bg-white focus:outline-none focus:ring-2 focus:ring-white" data-action="click->dropdown#toggle">
              <%= image_tag("setting.svg", alt: "Setting Icon") %>
            </button>

            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden" data-dropdown-target="dropdown">
              <%= link_to 'Edit', edit_organization_path(organization), class: 'block px-4 py-2 text-sm text-yellow-600 hover:bg-yellow-50' %>
              <%= link_to 'Delete', organization_path(organization), data: { turbo_confirm: 'Are you sure you want to delete this organization?', turbo_method: :delete }, class: 'block px-4 py-2 text-sm text-red-600 hover:bg-red-50' %>
            </div>
          </div>
        </div>

        <p class="text-gray-600 mb-2 mt-4">Organization Members:</p>

        <div class="mb-2">
          <%= link_to 'Add Members', new_organization_member_path(organization), class: 'inline-block px-2 py-1 bg-blue-500 text-white text-sm rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400' %>
        </div>

        <table class="w-full text-gray-800 mb-4">
          <thead>
          <tr class="border-b">
            <th class="px-4 py-2 text-left">Username</th>
            <th class="px-4 py-2 text-left">Position</th>
            <th class="px-4 py-2 text-left">Actions</th>
          </tr>
          </thead>
          <tbody>
          <% sorted_organization_members(organization.members).each do |member| %>
            <tr class="border-b">
              <td class="px-4 py-2"><%= member.user.username %></td>
              <td class="px-4 py-2"><%= member.officer_position.name %></td>
              <td class="px-4 py-2">
                <%= link_to 'Edit', edit_organization_member_path(organization, member), class: 'inline-block px-2 py-1 bg-yellow-500 text-white text-sm rounded-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-400' %>
                <%= link_to 'Remove', organization_member_path(organization, member), data: { turbo_confirm: 'Are you sure you want to remove this member?', turbo_method: :delete }, class: 'inline-block px-2 py-1 bg-red-600 text-white text-sm rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

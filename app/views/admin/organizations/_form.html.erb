<div class="form-container">
  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <!-- Form Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h1 class="text-xl font-semibold text-gray-900">
          <%= action_name.capitalize %> Organization
        </h1>
        <%= link_to organizations_path,
                    class: "button-back" do %>
          <%= image_tag 'admin/back-button.svg', class: 'w-4 h-4 mr-1.5' %>
          Back
        <% end %>
      </div>
    </div>

    <!-- Form Content -->
    <div class="px-6 py-6">
      <%= form_with model: @organization, url: url, method: method, class: "space-y-6",
                    data: { controller: "form", action: "turbo:submit-start->form#submitting" } do |form| %>

        <!-- Organization Name -->
        <div class="form-group" data-controller="input">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative rounded-md shadow-sm">
            <%= form.text_field :name, class: "input-field", placeholder: "Enter organization name",
                                data: { action: "input->input#validate", input_target: "field" } %>
          </div>
        </div>

        <!-- Organization Code -->
        <div class="form-group" data-controller="input">
          <%= form.label :code, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative rounded-md shadow-sm">
            <%= form.text_field :code, class: "input-field", placeholder: "Enter organization code",
                                data: { action: "input->input#validate", input_target: "field" } %>
          </div>
        </div>

        <div class="flex justify-end space-x-4 mt-8">
          <%= link_to 'Cancel', back_url, class: 'button-cancel' %>

          <%= form.submit submit_text, class: "button-submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

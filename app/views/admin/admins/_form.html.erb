<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4"><%= action_name.capitalize %> Admin</h1>

  <div class="mb-4">
    <%= link_to 'Back to Lists', admins_path, class: 'inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <%= form_with model: @admin, url: url, method: method, html: { class: 'w-full' } do |form| %>
    <div class="mb-4">
      <%= form.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.email_field :email, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2' %>
    </div>

    <div class="mb-4">
      <%= form.label :username, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :username, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2' %>
    </div>

    <div class="mb-4 text-gray-700">
      <p>The default password is <strong>qwer4321`</strong></p>
    </div>

    <div>
      <%= form.submit submit, class: 'w-full bg-blue-600 text-white py-2 text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  <% end %>
</div>

<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4">Admin Lists</h1>

  <div class="mb-4">
    <%= link_to 'Add Admin', new_admin_path, class: 'inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="space-y-4">
    <% @admins.each do |admin| %>
      <div class="p-4 bg-white rounded-lg shadow">
        <p class="text-xl font-semibold text-gray-800 mb-2">Email: <span class="font-normal"><%= admin.email %></span></p>
        <p class="text-gray-600 mb-2">Username: <span class="font-normal"><%= admin.username %></span></p>
        <div class="flex space-x-2">
          <%= link_to 'Edit', edit_admin_path(admin), class: 'inline-block px-3 py-1 bg-yellow-500 text-white text-sm rounded-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-400' %>
          <%= button_to 'Delete', admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' }, class: 'inline-block px-3 py-1 bg-red-600 text-white text-sm rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

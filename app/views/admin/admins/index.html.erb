<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4">Admin Lists</h1>

  <div class="mb-4">
    <%= link_to 'Add Admin', new_admin_path, class: 'inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="space-y-4">
    <% @admins.each do |admin| %>
      <div class="p-4 bg-white rounded-lg shadow">
        <div class="flex justify-between items-center">
          <p class="text-xl font-semibold text-gray-800 mb-2">Email: <span class="font-normal"><%= admin.email %></span></p>

          <div class="relative group" data-controller="dropdown">
            <button class="inline-block px-3 py-1 text-sm border border-b rounded-md hover:bg-white focus:outline-none focus:ring-2 focus:ring-white" data-action="click->dropdown#toggle">
              <%= image_tag("setting.svg", alt: "Setting Icon") %>
            </button>

            <div data-dropdown-target="dropdown" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden">
              <%= link_to 'Edit', edit_admin_path(admin), class: 'block px-4 py-2 text-sm text-yellow-600 hover:bg-yellow-50' %>
              <%= link_to 'Remove', admin_path(admin), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to remove?' }, class: 'block px-4 py-2 text-sm text-red-600 hover:bg-red-50' %>
            </div>
          </div>
        </div>
        <p class="text-gray-600 mb-2">Username: <span class="font-normal"><%= admin.username %></span></p>
      </div>
    <% end %>
  </div>
</div>

<div class="form-container">
  <h1><%= action_name.capitalize %> Member in <%= @organization.name %></h1>

  <div class="mb-4">
    <%= link_to 'Back to Lists', organizations_path, class: 'inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <%= form_with model: @member, url: url, method: method, html: { class: 'w-full' } do |form| %>
    <div class="mb-4">
      <%= form.label :student, class: 'form-label' %>
      <%= form.collection_select :user_id, sorted_students(User.student), :id, :username, { prompt: 'Select Student' },
                                 { class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2' } %>
    </div>

    <div>
      <%= form.label :officer_position, class: 'form-label' %>
      <%= form.collection_select :officer_position_id, sorted_positions(OfficerPosition.all), :id, :name, { prompt: 'Select Officer Position' },
                                 { class: 'mt-1 mb-3 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2' } %>
    </div>

    <div>
      <%= form.submit submit, class: 'w-full bg-blue-600 text-white py-2 text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  <% end %>
</div>

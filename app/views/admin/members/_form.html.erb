<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4"><%= action_name.capitalize %> Member</h1>
  <div class="mb-4">
    <%= link_to 'Back to Lists', organizations_path, class: 'inline-block px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <%= form_with model: @member, url: url, method: method, html: { class: 'w-full' } do |form| %>
    <div class="mb-4">
      <%= form.label :student, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.collection_select :username, User.student, :username, :username, { prompt: 'Select Student' },
                                 { class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2' } %>
    </div>
    <div>
      <%= form.submit submit, class: 'w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  <% end %>
</div>

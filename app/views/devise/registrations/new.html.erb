<div class="register-container">
  <div class="register-content">
    <div class="header">
      <%= link_to 'Login', new_user_session_path, class: 'button login-button' %>
      <%= link_to 'Register', new_user_registration_path, class: ' button register-button active' %>
    </div>
    <h2 class="header-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "signup-form") do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :username, class: "form-label" %>
        <%= f.text_field :username, autofocus: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <em class="password-hint">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign up", class: "submit-button" %>
      </div>
    <% end %>
  </div>
</div>

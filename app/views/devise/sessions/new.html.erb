<div class="login-container">
  <div class="login-content">
    <div class="header">
      <%= link_to 'Login', new_user_session_path, class: 'button login-button' %>
      <%= link_to 'Register', new_user_registration_path, class: 'button register-button' %>
    </div>
    <h2 class="header-title">Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :username, class: 'form-label' %>
        <%= f.text_field :username, autofocus: true, class: 'form-input' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me, class: 'form-checkbox' %>
          <%= f.label :remember_me, class: 'form-label-inline' %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Log in", class: 'submit-button' %>
      </div>
    <% end %>
  </div>
</div>

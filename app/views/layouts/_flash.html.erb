<div class="alert-container">
  <% if notice %>
    <div class="alert alert-info flex justify-between items-center p-4 mb-4 bg-blue-100 text-blue-700 border border-blue-300 rounded shadow-lg" role="alert">
      <div class="flex-grow text-center"><%= notice %></div>
      <button class="close-button ml-4 text-xl font-bold text-blue-700 hover:text-blue-900" onclick="this.parentElement.style.display='none'">&times;</button>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger flex justify-between items-center p-4 mb-4 bg-red-100 text-red-700 border border-red-300 rounded shadow-lg" role="alert">
      <div class="flex-grow text-center"><%= alert %></div>
      <button class="close-button ml-4 text-xl font-bold text-red-700 hover:text-red-900" onclick="this.parentElement.style.display='none'">&times;</button>
    </div>
  <% end %>
</div>